<ayaxphpclass>
<make object="class"> 
	<build out_file="cmonitoreo.php" classname="cmonitoreo" classlabel="monitoreo">
		<parse in_file="monitoreo.sql" tablename="estados_de_monitoreos" />
	</build>
</make>

<make object="search_and_list"> 
	<build out_file="monitoreo.php" classname="cmonitoreo" title="Nuevo Estado de Monitoreo">
		<field name="id_estado_de_monitoreo" label="Estado" presentation="TEXT" isvisible="false" />
		<field name="color" label="Color" presentation="TEXT" ismandatory="true" />
		<field name="color_html" label="Color Hexa" presentation="TEXT" isvisible="false" />
		<field name="monitoreos_semanales" label="Numero" presentation="INT" ismandatory="true" />
		<field name="descripcion" label="text" presentation="INT" ismandatory="true" />
		<searchfield name="color" />
		<searchfield name="color_html" />
		<searchfield name="monitoreos_semanales" />
		<searchfield name="descripcion" />
		<listfield name="color" />
		<listfield name="color_html" />
		<listfield name="monitoreos_semanales" />
		<listfield name="descripcion" />
		<action label="ver" target="monitoreo_maint.php.php?OP=V" operation="V">
			<sendfield classname="cmonitoreo" name="id_estado_de_monitoreo"/>
		</action>
		<action label="baja" target="monitoreo_maint_b.php?OP=M" operation="M">
			<sendfield classname="cmonitoreo" name="id_estado_de_monitoreo"/>
		</action>
		<action label="modificacion" target="monitoreo_maint.php.php?OP=M" operation="M">
			<sendfield classname="cmonitoreo" name="id_estado_de_monitoreo"/>
		</action>
	</build>
</make>

<make object="table_maint"> 
	<build out_file="monitoreo_maint.php" classname="cmonitoreo" title="Monitoreo" next="monitoreo.php?last=1&amp;OP=L">
		<field name="id_estado_de_monitoreo" label="Estado" presentation="TEXT" isvisible="false" />
		<field name="color" label="Color" presentation="TEXT" ismandatory="true" />
		<field name="color_html" label="Color Hexa" presentation="TEXT" isvisible="false" />
		<field name="monitoreos_semanales" label="Numero" presentation="INT" ismandatory="true" />
		<field name="descripcion" label="text" presentation="INT" ismandatory="true" />
	</build>
</make>

<make object="table_maint"> 
	<build out_file="monitoreo_maint_b.php" classname="cmonitoreo" title="Baja de Monitoreo" next="monitoreo.php?last=1&amp;OP=L">
		<field name="id_estado_de_monitoreo" label="Estado" presentation="TEXT" isvisible="false" />
		<field name="color" label="Color" presentation="TEXT" ismandatory="true" />
		<field name="color_html" label="Color Hexa" presentation="TEXT" isvisible="false" />
		<field name="monitoreos_semanales" label="Numero" presentation="INT" ismandatory="true" />
		<field name="descripcion" label="text" presentation="INT" ismandatory="true" />
	</build>
</make>


</ayaxphpclass>